{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "types/*.d.ts"]
  },
  "include": ["src/**/*", "types/*.d.ts"],
  "exclude": ["node_modules"]
}
